<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>com.prashantaryal.onlinebankingsystem.servlets.AccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/api/accounts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TransferServlet</servlet-name>
        <servlet-class>com.prashantaryal.onlinebankingsystem.servlets.TransferServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransferServlet</servlet-name>
        <url-pattern>/api/transfer</url-pattern>
    </servlet-mapping>

</web-app>
